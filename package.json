{
  "name": "DockerisedNestJsAPI",
  "version": "1.0.0",
  "description": "Server implementation for my.andela.com platform",
  "author": "Andela Engineering - engineering@andela.com",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "pm2": "./node_modules/.bin/pm2 start src/main.ts -i 2 --name 'my.andela.com/api' --watch",
    "start:development": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test:watch": "jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --forceExit",
    "test:integration": "NODE_ENV=test jest --config ./jest-integration.json --forceExit",
    "test:e2e": "NODE_ENV=test jest --config ./jest-e2e.json --forceExit",
    "webpack": "webpack --config webpack.config.js",
    "doc:serve": "npx compodoc -p tsconfig.json -n 'MyAndela server documentation' --theme 'Material design' -d documentation/compodoc -s"
  },
  "dependencies": {
    "@nest-middlewares/cors": "5.1.1",
    "@nest-middlewares/helmet": "5.1.1",
    "@nest-middlewares/response-time": "5.1.1",
    "@nestjs/common": "5.5.0",
    "@nestjs/core": "5.5.0",
    "@nestjs/passport": "5.1.0",
    "@nestjs/swagger": "2.5.1",
    "@types/express-jwt": "0.0.40",
    "body-parser": "1.18.3",
    "class-transformer": "0.1.10",
    "class-validator": "0.9.1",
    "dd-trace": "0.7.2",
    "dotenv": "6.1.0",
    "express-jwt": "5.3.1",
    "jsonwebtoken": "8.4.0",
    "jwks-rsa": "1.3.0",
    "nest-status-monitor": "0.0.3",
    "passport": "0.4.0",
    "passport-auth0": "1.1.0",
    "passport-google-oauth20": "1.0.0",
    "passport-jwt": "4.0.0",
    "pg": "7.6.0",
    "pushid": "1.0.0",
    "reflect-metadata": "0.1.12",
    "rosie": "2.0.1",
    "rxjs": "6.2.2",
    "ts-nats": "1.0.4",
    "typeorm": "0.2.8",
    "typescript": "3.0.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "1.1.7",
    "@nestjs/testing": "5.5.0",
    "@types/chance": "1.0.1",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.1",
    "@types/jsonwebtoken": "8.3.0",
    "@types/node": "10.7.1",
    "chance": "1.0.16",
    "jest": "23.5.0",
    "nodemon": "1.18.3",
    "pm2": "3.2.5",
    "prettier": "1.14.2",
    "rimraf": "2.6.2",
    "supertest": "3.1.0",
    "ts-jest": "23.1.3",
    "ts-loader": "4.4.2",
    "ts-node": "7.0.1",
    "tsconfig-paths": "3.5.0",
    "tslint": "5.11.0",
    "webpack": "4.16.5",
    "webpack-cli": "3.1.0",
    "webpack-node-externals": "1.7.2"
  },
  "jest": {
    "globalSetup": "../setupTests.js",
    "globalTeardown": "../teardownTests.js",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
